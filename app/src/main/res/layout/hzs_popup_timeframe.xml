<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_blue_bright">
    <Button
        android:id="@+id/hzs_history_timeframe_total_btn"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="总"
        android:background="@android:color/transparent"/>
    <Button
        android:id="@+id/hzs_history_timeframe_year_btn"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="年"
        android:background="@android:color/transparent"/>
    <Button
        android:id="@+id/hzs_history_timeframe_season_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="季"
        android:background="@android:color/transparent"/>
    <Button
        android:id="@+id/hzs_history_timeframe_month_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="月"
        android:background="@android:color/transparent"/>
    <Button
        android:id="@+id/hzs_history_timeframe_day_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="日"
        android:background="@android:color/transparent"/>

</LinearLayout>