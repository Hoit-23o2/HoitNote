<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.bookings.BookingOutcomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/booking_money"
                    style="@style/HoitTitleText"
                    android:gravity="center"
                    android:layout_margin="10dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <com.example.hoitnote.customviews.FontAwesome
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:text="\uf030"
                    android:layout_margin="10dp"
                    style="@style/HoitTitleText"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                app:cardElevation="5dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    >

                    <EditText
                        android:id="@+id/hzs_booking_money_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="5"
                        android:background="@null"
                        android:hint="@string/booking_money_hint"
                        android:inputType="number|numberDecimal"
                        android:textSize="40sp"
                        android:singleLine="true"
                        android:maxLength="10"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:text="￥"
                        android:textSize="40sp"
                        style="@style/HoitTitleText"
                        android:gravity="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/booking_information"
                    style="@style/HoitTitleText"
                    android:gravity="center"
                    android:layout_margin="10dp"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                app:cardElevation="5dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            style="@style/HoitGroupText"
                            android:text="时间"
                            android:drawableLeft="@drawable/hzs_clock"
                            android:layout_margin="5dp"
                            android:background="@android:color/transparent"
                            android:clickable="false"/>
                        <TextView
                            android:id="@+id/hzs_booking_time_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="44"
                            android:text="@string/booking_time"
                            style="@style/HoitSubTitleText"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="15dp"
                            android:clickable="true"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:text="分类"
                            style="@style/HoitGroupText"
                            android:drawableLeft="@drawable/hzs_classify"
                            android:layout_margin="5dp"
                            android:background="@android:color/transparent"
                            android:clickable="false"/>
                        <LinearLayout
                            android:id="@+id/hzs_booking_classify_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="44"
                            android:clickable="true">
                            <com.example.hoitnote.customviews.FontAwesome
                                style="@style/HoitSubTitleText"
                                android:id="@+id/hzs_booking_first_class"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical|left"
                                android:paddingLeft="15dp"
                                android:text="@string/booking_class1"
                                android:clickable="false"/>
                            <com.example.hoitnote.customviews.FontAwesome
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                style="@style/HoitIconUnclickable"
                                android:text="@string/right_arrow"
                                android:layout_gravity="center"
                                android:clickable="false" />
                            <com.example.hoitnote.customviews.FontAwesome
                                android:id="@+id/hzs_booking_second_class"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical|left"
                                android:paddingLeft="15dp"
                                android:layout_weight="1"
                                android:text="@string/booking_class2"
                                android:clickable="false"
                                style="@style/HoitSubTitleText"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/booking_other"
                    style="@style/HoitTitleText"
                    android:gravity="center"
                    android:layout_margin="10dp"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:cardCornerRadius="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                app:cardElevation="5dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:text="成员"
                            style="@style/HoitGroupText"
                            android:drawableLeft="@drawable/hzs_person"
                            android:layout_margin="5dp"
                            android:background="@android:color/transparent"
                            android:clickable="false"/>
                        <TextView
                            android:id="@+id/hzs_booking_person_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="44"
                            android:text="@string/booking_member"
                            style="@style/HoitSubTitleText"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="15dp"
                            android:clickable="true"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:text="商家"
                            style="@style/HoitGroupText"
                            android:drawableLeft="@drawable/hzs_store"
                            android:layout_margin="5dp"
                            android:background="@android:color/transparent"
                            android:clickable="false"/>
                        <TextView
                            android:id="@+id/hzs_booking_store_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="44"
                            android:text="@string/booking_vendor"
                            style="@style/HoitSubTitleText"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="15dp"
                            android:clickable="true"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:text="项目"
                            style="@style/HoitGroupText"
                            android:drawableLeft="@drawable/hzs_star_folder"
                            android:layout_margin="5dp"
                            android:background="@android:color/transparent"
                            android:clickable="false"/>
                        <TextView
                            android:id="@+id/hzs_booking_project_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="44"
                            android:text="@string/booking_project_hint"
                            style="@style/HoitSubTitleText"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="15dp"
                            android:clickable="true"/>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/booking_remark"
                    style="@style/HoitTitleText"
                    android:gravity="center"
                    android:layout_margin="10dp"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:cardCornerRadius="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                app:cardElevation="5dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white">
                    <EditText
                        android:id="@+id/hzs_booking_note_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/booking_remark"
                        style="@style/HoitSubTitleText"
                        android:gravity="top|left"
                        android:paddingLeft="15dp"
                        android:clickable="true"
                        android:layout_margin="10dp"
                        android:background="@color/design_default_color_background"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>