<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="traditionalPasswordFragment"
            type="com.example.hoitnote.views.locks.TraditionalPasswordFragment" />
        <variable
            name="lockViewModel"
            type="com.example.hoitnote.viewmodels.LockViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".views.locks.LockActivity">
        <EditText
            android:id="@+id/realCodeInput"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="@null"
            android:cursorVisible="false"
            android:singleLine="true"
            android:text="@={lockViewModel.password}"
            android:textSize="0sp"
            tools:ignore="Autofill,LabelFor,TextFields" />
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="@string/traditional_lock"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="2">

            <com.example.hoitnote.customviews.HoitPasswordFrame
                android:id="@+id/hoitPasswordFrame1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:onClick="@{(v)->traditionalPasswordFragment.getFocus(v)}"
                app:cardElevation="20dp"
                app:passwordDisplayStyle="*" />

            <com.example.hoitnote.customviews.HoitPasswordFrame
                android:id="@+id/hoitPasswordFrame2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:onClick="@{(v)->traditionalPasswordFragment.getFocus(v)}"
                app:cardElevation="20dp"
                app:passwordDisplayStyle="*" />

            <com.example.hoitnote.customviews.HoitPasswordFrame
                android:id="@+id/hoitPasswordFrame3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:onClick="@{(v)->traditionalPasswordFragment.getFocus(v)}"
                app:cardElevation="20dp"
                app:passwordDisplayStyle="*" />

            <com.example.hoitnote.customviews.HoitPasswordFrame
                android:id="@+id/hoitPasswordFrame4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:onClick="@{(v)->traditionalPasswordFragment.getFocus(v)}"
                app:cardElevation="20dp"
                app:passwordDisplayStyle="*" />
        </LinearLayout>


        <LinearLayout
            android:layout_weight="3"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:id="@+id/loginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:onClick="@{(v)->traditionalPasswordFragment.login(v)}"
                android:text="@string/login_btn_hint" />
        </LinearLayout>



    </LinearLayout>
</layout>