<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.bookings.BookingOutcomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="资金"
                    style="@style/HoitTitleText"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:layout_margin="5dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <com.example.hoitnote.customviews.FontAwesome
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:text="\uf030"
                    android:layout_margin="5dp"
                    style="@style/HoitTitleText"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                app:cardElevation="5dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    >
                    <EditText
                        android:id="@+id/hzs_booking_money_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:layout_marginVertical="10dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="50sp"
                        android:inputType="numberDecimal"
                        android:hint="金额"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:text="￥"
                        android:textSize="50sp"
                        style="@style/HoitTitleText"
                        android:gravity="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="信息"
                    style="@style/HoitTitleText"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:layout_margin="5dp"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                app:cardElevation="5dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:text="时间"
                            android:drawableLeft="@drawable/hzs_clock"
                            android:layout_margin="5dp"
                            android:background="@android:color/transparent"
                            android:clickable="false"/>
                        <TextView
                            android:id="@+id/hzs_booking_time_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="44"
                            android:text="时间"
                            android:textSize="15dp"
                            android:textColor="@color/colorDefaultTextPrimary"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="15dp"
                            android:clickable="true"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:text="账户"
                            android:drawableLeft="@drawable/hzs_account"
                            android:layout_margin="5dp"
                            android:background="@android:color/transparent"
                            android:clickable="false"/>
                        <LinearLayout
                            android:id="@+id/hzs_booking_classify_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="44">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="20">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/outcome_cardView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/holo_red_light"
                                    app:cardCornerRadius="5dp"
                                    app:layout_constraintBottom_toBottomOf="@+id/hzs_booking_outcome_account"
                                    app:layout_constraintEnd_toEndOf="@+id/hzs_booking_outcome_account"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintHorizontal_bias="0.175"
                                    app:layout_constraintVertical_bias="0.05">
                                    <TextView
                                        style="@style/HoitSubTitleText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="转出"
                                        android:textColor="?attr/textColorPrimary"
                                        android:background="?attr/colorAccent"/>
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/hzs_booking_outcome_account"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical|left"
                                    android:paddingLeft="15dp"
                                    android:text="转出"
                                    android:textSize="15dp"
                                    android:textColor="@color/colorDefaultTextPrimary"
                                    android:clickable="false"/>




                            </androidx.constraintlayout.widget.ConstraintLayout>
                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                app:cardCornerRadius="5dp"
                                android:layout_gravity="center_vertical"
                                android:clickable="false">
                                <com.example.hoitnote.customviews.FontAwesome
                                    android:id="@+id/change_account_button"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="\uf362"
                                    android:layout_weight="4"
                                    android:clickable="true"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    />
                            </androidx.cardview.widget.CardView>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="24">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/income_cardView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/holo_red_light"
                                    app:cardCornerRadius="5dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="@+id/hzs_booking_income_account"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="@+id/hzs_booking_income_account"
                                    app:layout_constraintHorizontal_bias="0.1"
                                    app:layout_constraintVertical_bias="0.05">
                                    <TextView
                                        style="@style/HoitSubTitleText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="?attr/colorAccent"
                                        android:text="转入"
                                        android:textColor="?attr/textColorPrimary" />
                                </androidx.cardview.widget.CardView>
                                <TextView
                                    android:id="@+id/hzs_booking_income_account"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical|left"
                                    android:paddingLeft="15dp"
                                    android:textSize="15dp"
                                    android:text="转入"
                                    android:textColor="@color/colorDefaultTextPrimary"
                                    android:clickable="true"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="其它"
                    style="@style/HoitTitleText"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:layout_margin="5dp"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:cardCornerRadius="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                app:cardElevation="5dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:text="成员"
                            android:drawableLeft="@drawable/hzs_person"
                            android:layout_margin="5dp"
                            android:background="@android:color/transparent"
                            android:clickable="false"/>
                        <TextView
                            android:id="@+id/hzs_booking_person_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="44"
                            android:text="成员"
                            android:textSize="15dp"
                            android:textColor="@color/colorDefaultTextPrimary"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="15dp"
                            android:clickable="true"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:text="商家"
                            android:drawableLeft="@drawable/hzs_store"
                            android:layout_margin="5dp"
                            android:background="@android:color/transparent"
                            android:clickable="false"/>
                        <TextView
                            android:id="@+id/hzs_booking_store_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="44"
                            android:text="商家"
                            android:textSize="15dp"
                            android:textColor="@color/colorDefaultTextPrimary"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="15dp"
                            android:clickable="true"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:text="项目"
                            android:drawableLeft="@drawable/hzs_star_folder"
                            android:layout_margin="5dp"
                            android:background="@android:color/transparent"
                            android:clickable="false"/>
                        <TextView
                            android:id="@+id/hzs_booking_project_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="44"
                            android:text="项目"
                            android:textSize="15dp"
                            android:textColor="@color/colorDefaultTextPrimary"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="15dp"
                            android:clickable="true"/>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="备注"
                    style="@style/HoitTitleText"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:layout_margin="5dp"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:cardCornerRadius="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                app:cardElevation="5dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white">
                    <EditText
                        android:id="@+id/hzs_booking_note_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="备注"
                        android:textSize="15dp"
                        android:textColor="@color/colorDefaultTextPrimary"
                        android:gravity="top|left"
                        android:paddingLeft="15dp"
                        android:clickable="true"
                        android:layout_margin="10dp"
                        android:background="@color/design_default_color_background"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>
