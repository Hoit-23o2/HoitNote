<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.bookings.BookingOutcomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/booking_money"
                    style="@style/HoitTitleText"
                    android:gravity="center"
                    android:layout_margin="10dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <com.example.hoitnote.customviews.FontAwesome
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:text="\uf030"
                    android:layout_margin="10dp"
                    style="@style/HoitTitleText"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    >
                    <EditText
                        android:background="@null"
                        android:id="@+id/hzs_booking_money_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:layout_marginVertical="10dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="40sp"
                        android:inputType="numberDecimal"
                        android:hint="@string/booking_money_hint"
                        android:layout_marginStart="20dp"
                        android:singleLine="true"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:text="￥"
                        android:textSize="40sp"
                        style="@style/HoitTitleText"
                        android:gravity="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/booking_information"
                    style="@style/HoitTitleText"
                    android:gravity="center"
                    android:layout_margin="10dp"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            style="@style/HoitGroupText"
                            android:text="时间"
                            android:drawableLeft="@drawable/hzs_clock"
                            android:layout_margin="5dp"
                            android:background="@android:color/transparent"
                            android:clickable="false"/>
                        <TextView
                            android:id="@+id/hzs_booking_time_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="44"
                            android:text="@string/booking_time"
                            style="@style/HoitSubTitleText"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="15dp"
                            android:clickable="true"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:text="账户"
                            android:drawableLeft="@drawable/hzs_account"
                            android:layout_margin="5dp"
                            android:background="@android:color/transparent"
                            android:clickable="false"/>
                        <LinearLayout
                            android:id="@+id/hzs_booking_classify_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="44">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">


                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:paddingLeft="15dp">
                                        <androidx.cardview.widget.CardView
                                            android:id="@+id/outcome_cardView"
                                            android:layout_height="match_parent"
                                            android:layout_width="match_parent"
                                            android:background="@android:color/holo_red_light"
                                            app:cardCornerRadius="10dp">
                                            <TextView
                                                android:paddingHorizontal="5dp"
                                                style="@style/HoitSubTitleText"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/booking_transfer_out"
                                                android:textColor="?attr/textColorPrimary"
                                                android:background="?attr/colorAccent"/>
                                        </androidx.cardview.widget.CardView>
                                    </LinearLayout>


                                <TextView
                                    android:id="@+id/hzs_booking_outcome_account"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical|left"
                                    android:paddingLeft="15dp"
                                    android:text="@string/booking_transfer_out"
                                    style="@style/HoitSubTitleText"
                                    android:clickable="false"/>




                            </LinearLayout>
                            <com.example.hoitnote.customviews.FontAwesome
                                android:id="@+id/change_account_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/booking_transfer_exchange"
                                style="@style/HoitIcon"
                                android:clickable="true"
                                android:textSize="14sp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:focusable="true" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:orientation="vertical"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                                <LinearLayout
                                    android:layout_gravity="center"
                                    android:paddingLeft="15dp"
                                    android:paddingStart="15dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/income_cardView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@android:color/holo_red_light"
                                        app:cardCornerRadius="10dp">
                                        <TextView
                                            android:paddingHorizontal="5dp"
                                            style="@style/HoitSubTitleText"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="?attr/colorAccent"
                                            android:text="@string/booking_transfer_in"
                                            android:textColor="?attr/textColorPrimary" />
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/hzs_booking_income_account"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical|left"
                                    android:paddingLeft="15dp"
                                    android:text="@string/booking_transfer_in"
                                    style="@style/HoitSubTitleText"
                                    android:clickable="true"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/booking_other"
                    style="@style/HoitTitleText"
                    android:gravity="center"
                    android:layout_margin="10dp"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:cardCornerRadius="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:text="成员"
                            style="@style/HoitGroupText"
                            android:drawableLeft="@drawable/hzs_person"
                            android:layout_margin="5dp"
                            android:background="@android:color/transparent"
                            android:clickable="false"/>
                        <TextView
                            android:id="@+id/hzs_booking_person_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="44"
                            android:text="@string/booking_member"
                            style="@style/HoitSubTitleText"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="15dp"
                            android:clickable="true"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:text="商家"
                            style="@style/HoitGroupText"
                            android:drawableLeft="@drawable/hzs_store"
                            android:layout_margin="5dp"
                            android:background="@android:color/transparent"
                            android:clickable="false"/>
                        <TextView
                            android:id="@+id/hzs_booking_store_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="44"
                            android:text="@string/booking_vendor"
                            style="@style/HoitSubTitleText"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="15dp"
                            android:clickable="true"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:text="项目"
                            style="@style/HoitGroupText"
                            android:drawableLeft="@drawable/hzs_star_folder"
                            android:layout_margin="5dp"
                            android:background="@android:color/transparent"
                            android:clickable="false"/>
                        <TextView
                            android:id="@+id/hzs_booking_project_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="44"
                            android:text="@string/booking_project_hint"
                            style="@style/HoitSubTitleText"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="15dp"
                            android:clickable="true"/>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/booking_remark"
                    style="@style/HoitTitleText"
                    android:gravity="center"
                    android:layout_margin="10dp"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:cardCornerRadius="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white">
                    <EditText
                        android:id="@+id/hzs_booking_note_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/booking_remark"
                        style="@style/HoitSubTitleText"
                        android:gravity="top|left"
                        android:paddingLeft="15dp"
                        android:clickable="true"
                        android:layout_margin="10dp"
                        android:background="@color/design_default_color_background"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>